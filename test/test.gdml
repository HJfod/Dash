<!DOCTYPE gdml>
<gdml>
    <scene>
        <define:MyNode>
            <layout:row as="node" pad="10">
                <sprite src="GJ_button_01.png" />
                <label scale=".5">instance of my node!</label>
            </layout:row>
        </define:MyNode>

        <int:HeightVar>210</int:HeightVar>
        <string:MyStringVar>gay sex</string:MyStringVar>

        <sprite src="GJ_gradientBG.png" x="-5" y="-5" color="0,102,255" scale-x="(ww + 10) / tw" scale-y="(wh + 10) / th" anchor="0,0" />

        <ssprite src="square02b_001.png" x="ww/2" y="wh/2" size="310,{HeightVar}" color="0,0,0" opacity="100">
            <label>{MyStringVar}</label>
            <layout:column x="pw/2" y="ph/2" pad="10">
                <create:MyNode />
                <create:MyNode />
                <create:MyNode />
            </layout:column>
        </ssprite>

        <menu>
            <button x="-ww/2 + 25" y="wh/2 - 25">
                <sprite frame="GJ_arrow_01_001.png" />
            </button>
        </menu>
    </scene>
</gdml>
