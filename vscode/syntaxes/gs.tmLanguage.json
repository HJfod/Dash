{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "gemscript",
	"patterns": [
		{
			"include": "#language"
		}
	],
	"repository": {
		"language": {
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"include": "#constants"
				},
				{
					"include": "#keywords"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#declarations"
				},
				{
					"include": "#parenthesis"
				},
				{
					"include": "#operators"
				},
				{
					"include": "#expression"
				}
			]
		},
		"declarations": {
			"patterns": [
				{
					"match": "(?<=const\\s+)[a-zA-Z]+",
					"name": "variable.other.constant.gs"
				},
				{
					"match": "(?<=\\b(new|as|macro|struct|extends|is|module|operator|using|->|decl(\\s+[a-zA-Z0-9]+\\s*=)?|[^:]:)\\b\\s*)[a-zA-Z0-9_]+",
					"name": "entity.name.type.gs"
				},
				{
					"match": "\\b([A-Z][a-zA-Z0-9_]*)\\b",
					"name": "entity.name.type.gs"
				},
				{
					"match": "\\b(\\w+\\!?)(?=(\\s*(::\\s*)?<[^>]*>)?\\s*\\()",
					"captures": {
						"1": {
							"name": "entity.name.function.gs"
						}
					}
				},
				{
					"match": "[a-zA-Z0-9_]+(?=\\s*::)",
					"name": "entity.name.type.gs"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.gs",
					"match": "\\b(for|while|if|else|unwrap|try|return|yield|break|from|continue|new|match|switch)\\b"
				},
				{
					"name": "keyword.control.meta.gs",
					"match": "@(::)?([a-zA-Z0-9_]+::)*[a-zA-Z0-9_]+\\b"
				},
				{
					"name": "keyword.control.less.gs",
					"match": "@!(::)?([a-zA-Z0-9_]+::)*[a-zA-Z0-9_]+\\b"
				},
				{
					"name": "storage.type.gs",
					"match": "\\b(void|bool|int|float|string)\\b"
				},
				{
					"name": "keyword.other.gs",
					"match": "\\b(in|is|as|where|extern|export|import|get|set|depends|required|default|assert)\\b"
				},
				{
					"name": "storage.type.gs",
					"match": "\\b(let|var|const|fun|mut|decl|struct|macro|codegen|compiler_intrinsic|module|enum|extends|using|type|public|private)\\b"
				},
				{
					"name": "punctuation.gs",
					"match": "(->)|\\.|;|,|:|\\?|#"
				}
			]
		},
		"operators": {
			"name": "keyword.operator.gs",
			"match": "[\\+\\-\\*\\/=<>\\^\\|\\&\\!%~@]"
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.interpolated.gs",
					"begin": "\\$\"",
					"end": "\"",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.gs"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.gs"
						}
					},
					"patterns": [
						{
							"name": "constant.character.escape.gs",
							"match": "\\\\."
						},
						{
							"name": "variable.gs",
							"begin": "\\{",
							"end": "\\}",
							"beginCaptures": {
								"0": { "name": "punctuation.paren.open" }
							},
							"endCaptures": {
								"0": { "name": "punctuation.paren.close" }
							},
							"patterns": [{ "include": "#language" }]
						}
					]
				},
				{
					"name": "string.quoted.double.gs",
					"begin": "\"",
					"end": "\"",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.gs"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.gs"
						}
					},
					"patterns": [
						{
							"name": "constant.character.escape.gs",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric.gs",
					"match": "\\b(([0-9]*\\.[0-9]+)|([0-9]+))\\b"
				},
				{
					"name": "constant.numeric.gs",
					"match": "0x[0-9A-Fa-f]+"
				},
				{
					"name": "constant.language.gs",
					"match": "\\b(this|super)\\b"
				},
				{
					"name": "constant.language.gs",
					"match": "\\b(true|false|null|none)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				},
				{
					"name": "comment.line",
					"begin": "//",
					"end": "\n"
				}
			]
		},
		"parenthesis": {
			"patterns": [
				{
					"begin": "\\(",
					"end": "\\)",
					"beginCaptures": {
						"0": { "name": "punctuation.paren.open" }
					},
					"endCaptures": {
						"0": { "name": "punctuation.paren.close" }
					},
					"name": "expression.group",
					"patterns": [{ "include": "#language" }]
				},
				{
					"begin": "\\{",
					"end": "\\}",
					"beginCaptures": {
						"0": { "name": "punctuation.paren.open" }
					},
					"endCaptures": {
						"0": { "name": "punctuation.paren.close" }
					},
					"name": "expression.group",
					"patterns": [{ "include": "#language" }]
				},
				{
					"begin": "\\[",
					"end": "\\]",
					"beginCaptures": {
						"0": { "name": "punctuation.paren.open" }
					},
					"endCaptures": {
						"0": { "name": "punctuation.paren.close" }
					},
					"name": "expression.group",
					"patterns": [{ "include": "#language" }]
				}
			]
		}
	},
	"scopeName": "source.gs"
}
